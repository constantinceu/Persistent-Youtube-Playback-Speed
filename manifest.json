{
    "manifest_version": 2,
    "name": "YouTube Speed Enforcer",
    "version": "1.0",
    "description": "Always applies your stored YouTube playback speed.",
    "icons": {
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "storage",
        "tabs",
        "https://www.youtube.com/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "js": [
                "contentScript.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    }
}